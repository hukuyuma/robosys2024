import sys

def tonum(s):
    try:
        return int(s)
    except ValueError:
        try:
            return float(s)
        except ValueError:
            return None  # 無効な入力は None を返す

ans = 0
count = 0

# 標準入力がターミナルかどうかをチェック
if not sys.stdin.isatty():
    print("数値を入力してください（終了するには Ctrl+D などで標準入力を終了）。")

for line in sys.stdin:
    line = line.strip()
    if not line:  # 空行を無視
        continue
    if line.lower() == "exit":
        break
    num = tonum(line)
    if num is None:
        print(f"警告: '{line}' は無効な入力です。数値を入力してください。")
        continue
    ans += num
    count += 1

if count > 0:
    average = ans / count
    print(f"合計: {ans}")
else:
    print("有効な入力がありませんでした。")
